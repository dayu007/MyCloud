        * {
            font-family: "微软雅黑";
            margin: 0;
            padding: 0;
        }

        html, body {
            height: 100%;
            width: 100%;
            padding: 0;
            margin: 0;
            overflow: hidden;
        }

        #content {
            min-height: 100%;
            position: absolute;
            height: 100%;
            z-index: 0;
        }

        .content {
            position: absolute;
            width: 100%;
            height: 100%;
            background-color: #f6f6f6;
        }

        .chatArea {
            width: 100%;
            height: 100%;
            background-color: #f6f6f6;
        }

        .txtArea {
            width: 100%;
            height: 90%;
            overflow-y: auto;
            background-color: #f6f6f6;
            position: absolute;
        }

        .sendArea {
            width: 100%;
            height: 10%;
            position: absolute;
            bottom: 0px;
        }

        #sendMessage {
            width: 100%;
