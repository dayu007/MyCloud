<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="mis.dao.UserDao"><!-- namespace为对应的interface接口 -->
	<select id="getUserByOpenId" parameterType="java.lang.String" resultType="mis.domain.User">
	select * from user where user.openid=#{openid}
	</select>

	<update id="updateUserByUserInfo" parameterType="mis.domain.User">
	udpate user set openid=#{openid},img=#{img} where id=#{id}
	
	</update>

</mapper>